{
    "name": "vigihdev/wp-cli-models",
    "description": "A structured WP-CLI package for WordPress development with DTOs, Commands, and modern PHP patterns",
    "homepage": "https://github.com/vigihdev/wp-cli-models",
    "keywords": [
        "wordpress",
        "wp-cli",
        "cli",
        "dto",
        "models",
        "commands",
        "development",
        "toolkit",
        "scaffolding",
        "generator",
        "php8",
        "oop",
        "solid",
        "design-patterns"
    ],
    "type": "wp-cli-package",
    "license": "MIT",
    "authors": [
        {
            "name": "Vigih Dev",
            "email": "your-email@example.com",
            "homepage": "https://github.com/vigihdev",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://satis.id"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/filesystem": "^6.4",
        "vigihdev/serializer": "dev-main",
        "vigihdev/support": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "10.5.x-dev",
        "symfony/dotenv": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Vigihdev\\WpCliModels\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vigihdev\\WpCliModels\\Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "test": "phpunit",
        "watch": "nodemon dev.js",
        "build": "console git:push && console satis:build && cd $HOME/.wp-cli/packages && composer update vigihdev/wp-cli-models && cd $HOME/WordpressCli/wp-cli-models",
        "dev": "php -S localhost:3072 dev.php"
    }
}